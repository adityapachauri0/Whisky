# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
REACT_APP_API_URL=https://api.yourdomain.com

# Google Maps (for location features)
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Stripe (for payments)
REACT_APP_STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key

# Google Analytics
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Environment
REACT_APP_ENV=production

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_CHAT=false

# API Endpoints (optional, if different from main API)
REACT_APP_BLOG_API_URL=
REACT_APP_MEDIA_API_URL=

# Security
REACT_APP_RECAPTCHA_SITE_KEY=

# Social Media (optional)
REACT_APP_FACEBOOK_APP_ID=
REACT_APP_TWITTER_HANDLE=

# CDN Configuration (optional)
REACT_APP_CDN_URL=

# Monitoring (optional)
REACT_APP_SENTRY_DSN=