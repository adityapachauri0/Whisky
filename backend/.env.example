# Environment
NODE_ENV=development

# Server
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/whiskey-investment

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-here-use-setup-admin-script
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Admin Authentication (generate using npm run setup-admin)
ADMIN_EMAIL=admin@viticultwhisky.co.uk
ADMIN_PASSWORD_HASH=your-bcrypt-hash-here-use-setup-admin-script

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@viticult.co.uk
EMAIL_FROM_NAME=ViticultWhisky

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ENCRYPTION_KEY=development-encryption-key-32chars
COOKIE_SECRET=development-cookie-secret

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=false

