# Environment
NODE_ENV=production

# Server
PORT=5001

# Database
MONGODB_URI=mongodb://username:password@localhost:27017/viticult-whisky?authSource=admin

# JWT Configuration
JWT_SECRET=<generate-64-character-random-string>
JWT_EXPIRES_IN=1d
JWT_COOKIE_EXPIRES_IN=1

# Admin Authentication
ADMIN_EMAIL=admin@viticultwhisky.co.uk
ADMIN_PASSWORD_HASH=<bcrypt-hash-of-secure-password>

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=<your-email@gmail.com>
EMAIL_PASSWORD=<your-app-specific-password>
EMAIL_FROM=noreply@viticultwhisky.co.uk
EMAIL_FROM_NAME=ViticultWhisky

# Frontend Configuration
FRONTEND_URL=https://viticultwhisky.co.uk
ALLOWED_ORIGINS=https://viticultwhisky.co.uk,https://www.viticultwhisky.co.uk

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Security
ENCRYPTION_KEY=<generate-32-character-random-string>
COOKIE_SECRET=<generate-32-character-random-string>
SESSION_SECRET=<generate-32-character-random-string>

# Logging
LOG_LEVEL=error
LOG_TO_FILE=true

# Optional Services
# SENTRY_DSN=<your-sentry-dsn>
# STRIPE_SECRET_KEY=<your-stripe-secret>
# STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>
# AWS_ACCESS_KEY_ID=<your-aws-key>
# AWS_SECRET_ACCESS_KEY=<your-aws-secret>
# AWS_REGION=<your-aws-region>
# AWS_S3_BUCKET=<your-s3-bucket>
# REDIS_URL=redis://username:password@host:port